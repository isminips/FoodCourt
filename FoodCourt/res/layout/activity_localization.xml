<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <view
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        class="com.example.foodcourt.particles.Visualisation"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/initial_pa"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:onClick="initializePA"
            android:text="Initial Belief PA" />
        <Button
            android:id="@+id/initial_bayes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:onClick="initializeBayes"
            android:text="Initial Belief Bayes" />
        <Button
            android:id="@+id/sense_bayes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:onClick="senseBayes"
            android:text="Sense Bayes" />
    </LinearLayout>

</LinearLayout>